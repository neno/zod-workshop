generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "../src/models/generated"
  relationModel         = "true"
  modelCase             = "PascalCase"
  modelSuffix           = "Schema"
  useDecimalJs          = "true"
  prismaJsonNullability = "true"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id           Int      @id @default(autoincrement())
  imdb_id      String?
  title        String
  poster_path  String
  release_date String
  overview     String
  genres       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
